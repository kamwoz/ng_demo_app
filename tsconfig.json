{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "",
    "rootDir": "./",
    "newLine": "LF"
  },
  "filesGlob": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "app",
    "typings/main.d.ts",
    "typings/main"
  ]
}